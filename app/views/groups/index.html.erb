
<h1><%= "#{@user.username}'s Group Page" %></h1>


<% if @current_user == @user %>
<!-- form for creating new group -->
<%= form_for Group.new, url: '/newgroup', html: {method: :post} do |f| %>
			<!-- creating of group -->
			<%= content_tag :div, id: "create-group" do %>
				<%= content_tag :p, "Create a Group" %>
			
					<%= f.text_field :title,required: true, placeholder: "title", id: "title-group", class: "" %>
					<%= f.submit :Submit, id: "group-submit" %>
					<% end %>
				<% end %>
				<% end %>
		
<!-- List your groups -->
	
		<% @groups.each do |g| %>
			<div><%= link_to "#{g.title}", user_group_path(@user.id, g.id)%>
				<% if @current_user == @user %>

			<%= link_to "Delete Group", user_group_path(@current_user.id, g.id), {:method => :delete} %>
				<% end %>
			</div>
	<% end %>