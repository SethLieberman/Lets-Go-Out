<h1>Groups#show</h1>
<p>Find me in app/views/groups/show.html.erb</p>



<h1>Hello <%= "Welcome to #{@group.title}" %></h1>
<%= link_to "My Page", user_path(@user.id) %>


<!-- creates a new post -->

<%= content_tag :div, id: "postform" do %>
		
			<%= form_for Post.new, url: user_group_posts_path(@current_user.id, @group.id), html: {method: :post} do |f| %>

			<!-- title of post -->
			<%= content_tag :div, id: "title" do %>
				<%= f.text_field :title,required: true, placeholder: "title", id: "title-input", class: "post-input" %>
				<% end %>

				<!-- content of post -->
				<%= content_tag :div, id: "content" do %>
				<%= f.text_area :content, required: true, placeholder: "content", id: "content-input", class: "post-input" %>

				<%= f.submit :Post, id: "post-submit" %>
				<% end %>
			<% end %>
		<% end %>
<!-- Display the posts -->

	<% @posts.each do |post| %>
		
			<%= content_tag :div, class: "post-card" do %>
				<%= content_tag :p, "#{post.title} | #{post.id}"%>
				<%= content_tag :p, "#{post.content}" %>
				<%= content_tag :p, "posted by #{post.user.username} and created #{distance_of_time_in_words(post.created_at, Time.now)} ago" %>
				
					<%= link_to "delete", user_group_post_path(@current_user.id, @group.id ,post.id), {:method => :delete} %>
				

	
	
		<!-- form for user to comment on posts -->
		<hr>
	<%= form_for Comment.new, url: user_group_post_comments_path(@current_user.id, @group.id, post.id), html: {method: :post} do |f| %>
		<%=f.label :comment %>
		<%=f.text_area :content, id: "content-input", required: true %>
		<%=f.submit :Post, id: "post-submit" %>

		
		<!-- displaying comments -->
				
				<% post.comments.each do |comment| %>
					<%= content_tag :p, "#{comment.content}" %>
					<%= content_tag :p, "comment by #{comment.user.username} and created #{distance_of_time_in_words(comment.created_at, Time.now)} ago" %>

					<%= link_to "delete", user_group_post_comment_path(@current_user.id, @group.id ,post.id, comment.id), {:method => :delete} %>
				<% end %>
			<% end %>
		<% end %>			
<% end %>