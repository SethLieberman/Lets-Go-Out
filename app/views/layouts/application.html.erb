<!DOCTYPE html>
<html>
<head>
  <title>Final</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
<h1>Hello <%= "Welcome #{@current_user.username}" %></h1>
	
	<%= link_to "Home", user_path(@current_user.id) %>

	<%= link_to "Other Users", users_path %>

<% if @current_user %>	

	<%= link_to "#{@current_user.username}'s Groups", user_groups_path(@current_user.id) %>
<%end%>

	<%= link_to "Search Places", places_path%>


	<%= link_to "Signout", logout_user_path, method: :delete %>

<% end %>

<%= yield %>
<%= flash[:alert] if flash[:alert] %>
</body>
</html>
